---
const clients = ['TechFlow', 'Urban Eats', 'PropVest', 'FinEdge', 'Nomad']
---

<section class="min-h-screen flex items-center relative overflow-hidden gradient-bg">
  <!-- Grid pattern -->
  <div class="absolute inset-0 grid-pattern"></div>
  
  <!-- Gradient orbs -->
  <div class="absolute top-1/4 -left-32 w-96 h-96 bg-primary-500/20 rounded-full blur-[128px]"></div>
  <div class="absolute bottom-1/4 -right-32 w-96 h-96 bg-primary-600/15 rounded-full blur-[128px]"></div>
  
  <div class="max-w-7xl mx-auto px-6 py-20 w-full relative">
    <div class="max-w-4xl mx-auto text-center">
      
      <!-- Trust badge -->
      <div class="inline-flex items-center gap-2 glass-card px-4 py-2 rounded-full mb-8 animate-fade-in-up">
        <span class="w-2 h-2 bg-primary-400 rounded-full animate-pulse"></span>
        <span class="text-sm text-dark-300">Trusted by 150+ brands in Singapore</span>
      </div>

      <!-- Main headline -->
      <h1 class="text-4xl sm:text-5xl lg:text-7xl font-display font-bold text-white leading-[1.1] mb-6 animate-fade-in-up delay-100">
        We Turn Marketing Into
        <span class="gradient-text block mt-2">Measurable Growth</span>
      </h1>

      <!-- Subheadline -->
      <p class="text-lg lg:text-xl text-dark-300 max-w-2xl mx-auto mb-10 animate-fade-in-up delay-200">
        Singapore's data-driven marketing agency. We craft strategies that 
        don't just look goodâ€”they drive revenue and scale your business.
      </p>

      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16 animate-fade-in-up delay-300">
        <a href="#contact" class="btn-primary text-base">
          Start Growing Today
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a href="#results" class="btn-secondary text-base">
          See Our Results
        </a>
      </div>

      <!-- Stats row -->
      <div class="grid grid-cols-3 gap-8 max-w-lg mx-auto animate-fade-in-up delay-400">
        <div class="text-center">
          <div class="text-3xl lg:text-4xl font-display font-bold text-white">3x</div>
          <div class="text-sm text-dark-400 mt-1">Avg. ROI</div>
        </div>
        <div class="text-center border-x border-dark-700">
          <div class="text-3xl lg:text-4xl font-display font-bold text-white">98%</div>
          <div class="text-sm text-dark-400 mt-1">Retention</div>
        </div>
        <div class="text-center">
          <div class="text-3xl lg:text-4xl font-display font-bold text-white">$2M+</div>
          <div class="text-sm text-dark-400 mt-1">Generated</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-dark-500 animate-bounce">
    <span class="text-xs tracking-widest uppercase">Scroll</span>
    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>
