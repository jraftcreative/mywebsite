      <div class="flex gap-6">
        {footerLinks.legal.map(link => (
          <a href={link.href} class="text-dark-400 hover:text-primary-400 text-sm transition-colors">
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
