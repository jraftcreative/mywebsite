      </div>

      <!-- Services -->
      <div>
        <h4 class="font-display font-semibold text-white mb-4">Services</h4>
        <ul class="space-y-3">
          {footerLinks.services.map(link => (
            <li>
              <a href={link.href} class="text-dark-300 hover:text-primary-400 text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h4 class="font-display font-semibold text-white mb-4">Company</h4>
        <ul class="space-y-3">
          {footerLinks.company.map(link => (
            <li>
              <a href={link.href} class="text-dark-300 hover:text-primary-400 text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-display font-semibold text-white mb-4">Get In Touch</h4>
        <ul class="space-y-3 text-sm text-dark-300">
          <li>
            <a href="mailto:hello@jraftcreative.com" class="hover:text-primary-400 transition-colors">
              hello@jraftcreative.com
            </a>
          </li>
          <li>
            <a href="tel:+6581234567" class="hover:text-primary-400 transition-colors">
              +65 8123 4567
            </a>
          </li>
          <li>Singapore</li>
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="pt-8 border-t border-dark-700 flex flex-col md:flex-row justify-between items-center gap-4">
