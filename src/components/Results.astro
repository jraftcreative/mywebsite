---
const testimonials = [
  {
    quote: "Within 3 months, our leads increased by 180% and cost per acquisition dropped by half.",
    author: "Sarah Chen",
    role: "CEO, TechFlow Solutions",
    avatar: "SC",
    metric: "+180%",
    metricLabel: "Leads"
  },
  {
    quote: "Their strategic approach doubled our engagement and directly impacted our bottom line.",
    author: "Marcus Tan",
    role: "Founder, Urban Eats",
    avatar: "MT",
    metric: "2x",
    metricLabel: "Engagement"
  },
  {
    quote: "Our close rate jumped from 15% to 42% in just two quarters. Incredible ROI.",
    author: "Jessica Lim",
    role: "Sales Director, PropVest",
    avatar: "JL",
    metric: "42%",
    metricLabel: "Close Rate"
  }
]

const stats = [
  { value: '$2M+', label: 'Revenue Generated' },
  { value: '150+', label: 'Happy Clients' },
  { value: '3x', label: 'Avg. ROI' },
  { value: '98%', label: 'Client Retention' }
]
---

<section id="results" class="min-h-screen flex items-center py-12 px-6 bg-dark-800 text-white">
  <div class="max-w-7xl mx-auto w-full">
    <!-- Section Header -->
    <div class="text-center mb-8" data-animate="animate-fade-in-up">
      <span class="inline-block text-primary-400 font-semibold text-sm uppercase tracking-wider mb-2">
        Proven Results
      </span>
      <h2 class="text-3xl md:text-4xl font-display font-bold text-white mb-3">
        Success Stories That <span class="text-primary-400">Speak For Themselves</span>
      </h2>
    </div>

    <!-- Stats Row -->
    <div class="grid grid-cols-4 gap-4 mb-8" data-animate="animate-fade-in-up">
      {stats.map(stat => (
        <div class="text-center">
          <div class="text-2xl lg:text-3xl font-display font-bold text-primary-400">{stat.value}</div>
          <div class="text-xs lg:text-sm text-dark-300">{stat.label}</div>
        </div>
      ))}
    </div>

    <!-- Testimonials -->
    <div class="grid md:grid-cols-3 gap-4">
      {testimonials.map((testimonial, index) => (
        <div 
          class="bg-dark-700/50 backdrop-blur-sm rounded-xl p-5 border border-dark-600 hover:border-primary-500 transition-all duration-300"
          data-animate="animate-fade-in-up"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <!-- Metric -->
          <div class="flex items-center gap-3 mb-4 pb-4 border-b border-dark-600">
            <div class="text-2xl font-display font-bold text-primary-400">
              {testimonial.metric}
            </div>
            <div class="text-sm text-dark-300">
              {testimonial.metricLabel}
            </div>
          </div>

          <!-- Quote -->
          <p class="text-dark-200 text-sm leading-relaxed mb-4">
            "{testimonial.quote}"
          </p>

          <!-- Author -->
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-primary-500 text-white rounded-full flex items-center justify-center font-semibold text-sm">
              {testimonial.avatar}
            </div>
            <div>
              <div class="font-semibold text-white text-sm">{testimonial.author}</div>
              <div class="text-xs text-dark-400">{testimonial.role}</div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
