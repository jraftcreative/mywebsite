---
const testimonials = [
  {
    quote: "Leads up 180%, acquisition cost down 50%. Best investment we've made.",
    author: "Sarah Chen",
    role: "CEO, TechFlow",
    metric: "+180%",
    metricLabel: "Lead Growth"
  },
  {
    quote: "Doubled our engagement and directly impacted revenue. Game-changer.",
    author: "Marcus Tan", 
    role: "Founder, Urban Eats",
    metric: "2x",
    metricLabel: "Engagement"
  },
  {
    quote: "Close rate jumped from 15% to 42%. The ROI speaks for itself.",
    author: "Jessica Lim",
    role: "Sales Director, PropVest",
    metric: "42%",
    metricLabel: "Close Rate"
  }
]
---

<section id="results" class="min-h-screen flex items-center py-20 px-6 bg-dark-900 relative overflow-hidden">
  <!-- Accent gradient -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-primary-500/10 rounded-full blur-[150px]"></div>
  
  <div class="max-w-7xl mx-auto w-full relative">
    <!-- Header -->
    <div class="text-center max-w-2xl mx-auto mb-12">
      <span class="text-primary-400 font-semibold text-sm uppercase tracking-wider mb-3 block">
        Results
      </span>
      <h2 class="text-3xl lg:text-5xl font-display font-bold text-white mb-4">
        Don't Take Our Word. <span class="gradient-text">Take Theirs.</span>
      </h2>
    </div>

    <!-- Testimonials -->
    <div class="grid md:grid-cols-3 gap-6">
      {testimonials.map((testimonial, index) => (
        <div 
          class="glass-card rounded-2xl p-6 hover:border-primary-500/30 transition-all duration-300 group"
          data-animate="animate-fade-in-up"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <!-- Metric -->
          <div class="flex items-baseline gap-3 mb-6">
            <span class="text-4xl font-display font-bold text-primary-400">{testimonial.metric}</span>
            <span class="text-dark-400 text-sm">{testimonial.metricLabel}</span>
          </div>

          <!-- Quote -->
          <p class="text-dark-200 leading-relaxed mb-6">
            "{testimonial.quote}"
          </p>

          <!-- Author -->
          <div class="flex items-center gap-3 pt-4 border-t border-dark-700">
            <div class="w-10 h-10 rounded-full bg-primary-500/20 flex items-center justify-center text-primary-400 font-semibold text-sm">
              {testimonial.author.split(' ').map(n => n[0]).join('')}
            </div>
            <div>
              <div class="text-white font-medium text-sm">{testimonial.author}</div>
              <div class="text-dark-400 text-xs">{testimonial.role}</div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Bottom stats bar -->
    <div class="mt-12 glass-card rounded-2xl p-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
        <div>
          <div class="text-2xl font-display font-bold text-white">$2M+</div>
          <div class="text-dark-400 text-sm">Revenue Generated</div>
        </div>
        <div>
          <div class="text-2xl font-display font-bold text-white">150+</div>
          <div class="text-dark-400 text-sm">Happy Clients</div>
        </div>
        <div>
          <div class="text-2xl font-display font-bold text-white">3x</div>
          <div class="text-dark-400 text-sm">Average ROI</div>
        </div>
        <div>
          <div class="text-2xl font-display font-bold text-white">98%</div>
          <div class="text-dark-400 text-sm">Client Retention</div>
        </div>
      </div>
    </div>
  </div>
</section>
