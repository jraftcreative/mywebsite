---
const navLinks = [
  { href: '#services', label: 'Services' },
  { href: '#about', label: 'About' },
  { href: '#process', label: 'Process' },
  { href: '#results', label: 'Results' },
]
---

<header id="navbar" class="fixed top-0 left-0 right-0 z-50 transition-all duration-500">
  <nav class="max-w-7xl mx-auto px-6 py-5 flex items-center justify-between">
    <!-- Logo -->
    <a href="#" onclick="window.scrollTo({top: 0, behavior: 'smooth'}); return false;" class="flex items-center gap-3 group">
      <div class="w-10 h-10 bg-primary-500 rounded-lg flex items-center justify-center transform group-hover:scale-110 transition-transform glow-green">
        <span class="text-white font-bold text-xl">J</span>
      </div>
      <span class="font-display font-bold text-xl text-white">
        Jraft<span class="text-primary-400">.</span>
      </span>
    </a>

    <!-- Desktop Navigation -->
    <div class="hidden md:flex items-center gap-1">
      {navLinks.map(link => (
        <a 
          href={link.href} 
          class="px-4 py-2 text-dark-300 hover:text-white font-medium transition-colors relative group"
        >
          {link.label}
          <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-0 h-0.5 bg-primary-500 group-hover:w-1/2 transition-all duration-300 rounded-full"></span>
        </a>
      ))}
      <a href="#contact" class="ml-4 btn-primary text-sm py-2.5 px-5">
        Let's Talk
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button 
      id="mobile-menu-btn" 
      class="md:hidden p-2 text-white hover:text-primary-400 transition-colors"
      aria-label="Toggle menu"
    >
      <svg id="menu-icon" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
      <svg id="close-icon" class="w-6 h-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden hidden absolute top-full left-0 right-0 glass-card border-t border-dark-800">
    <div class="flex flex-col p-4 gap-1">
      {navLinks.map(link => (
        <a 
          href={link.href} 
          class="mobile-nav-link px-4 py-3 text-dark-300 hover:text-white hover:bg-white/5 rounded-lg font-medium transition-all"
        >
          {link.label}
        </a>
      ))}
      <a href="#contact" class="mt-2 btn-primary justify-center">
        Let's Talk
      </a>
    </div>
  </div>
</header>

<script>
  const navbar = document.getElementById('navbar');
  
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      navbar?.classList.add('bg-dark-950/80', 'backdrop-blur-xl', 'border-b', 'border-dark-800/50');
      navbar?.classList.remove('py-5');
    } else {
      navbar?.classList.remove('bg-dark-950/80', 'backdrop-blur-xl', 'border-b', 'border-dark-800/50');
    }
  });

  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });

  document.querySelectorAll('.mobile-nav-link').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    });
  });
</script>
