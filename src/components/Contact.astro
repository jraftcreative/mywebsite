---
const contactOptions = [
  { icon: 'ðŸ“§', label: 'Email', value: 'hello@jraftcreative.com', href: 'mailto:hello@jraftcreative.com' },
  { icon: 'ðŸ“±', label: 'WhatsApp', value: '+65 8123 4567', href: 'https://wa.me/6581234567' },
]
---

<section id="contact" class="min-h-screen flex items-center py-20 px-6 bg-dark-950 relative">
  <div class="absolute inset-0 grid-pattern opacity-30"></div>
  <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-[800px] h-[400px] bg-primary-500/10 rounded-full blur-[150px]"></div>

  <div class="max-w-4xl mx-auto w-full relative">
    <div class="text-center mb-12">
      <span class="text-primary-400 font-semibold text-sm uppercase tracking-wider mb-3 block">
        Let's Talk
      </span>
      <h2 class="text-3xl lg:text-5xl font-display font-bold text-white mb-4">
        Ready to <span class="gradient-text">Scale?</span>
      </h2>
      <p class="text-dark-400 max-w-lg mx-auto">
        Book a free 30-minute strategy call. No pitch, no pressureâ€”just a conversation about your growth.
      </p>
    </div>

    <!-- Contact form -->
    <form id="contact-form" class="glass-card rounded-2xl p-8 max-w-2xl mx-auto">
      <div class="grid md:grid-cols-2 gap-4 mb-4">
        <input 
          type="text" 
          name="name" 
          required
          placeholder="Your name"
          class="w-full px-4 py-3 bg-dark-800 border border-dark-700 rounded-xl text-white placeholder-dark-500 focus:border-primary-500 focus:ring-1 focus:ring-primary-500 outline-none transition-all"
        />
        <input 
          type="email" 
          name="email" 
          required
          placeholder="Your email"
          class="w-full px-4 py-3 bg-dark-800 border border-dark-700 rounded-xl text-white placeholder-dark-500 focus:border-primary-500 focus:ring-1 focus:ring-primary-500 outline-none transition-all"
        />
      </div>
      
      <select 
        name="service" 
        required
        class="w-full px-4 py-3 bg-dark-800 border border-dark-700 rounded-xl text-white focus:border-primary-500 focus:ring-1 focus:ring-primary-500 outline-none transition-all mb-4 appearance-none"
      >
        <option value="" class="text-dark-500">What do you need help with?</option>
        <option value="branding">Brand Strategy</option>
        <option value="digital">Digital Marketing</option>
        <option value="social">Social Media</option>
        <option value="sales">Sales Training</option>
        <option value="other">Not sure yet</option>
      </select>

      <textarea 
        name="message" 
        rows="3"
        required
        placeholder="Tell us about your project..."
        class="w-full px-4 py-3 bg-dark-800 border border-dark-700 rounded-xl text-white placeholder-dark-500 focus:border-primary-500 focus:ring-1 focus:ring-primary-500 outline-none transition-all resize-none mb-6"
      ></textarea>

      <button type="submit" class="w-full btn-primary justify-center py-4">
        Send Message
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </button>
    </form>

    <!-- Alternative contact -->
    <div class="flex flex-wrap justify-center gap-6 mt-8">
      {contactOptions.map(option => (
        <a 
          href={option.href}
          target="_blank"
          class="flex items-center gap-3 text-dark-400 hover:text-primary-400 transition-colors"
        >
          <span>{option.icon}</span>
          <span class="text-sm">{option.value}</span>
        </a>
      ))}
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form');
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(form as HTMLFormElement);
    const data = Object.fromEntries(formData.entries());
    
    let message = `Hi Jraft! ðŸ‘‹\n\n`;
    message += `Name: ${data.name}\n`;
    message += `Email: ${data.email}\n`;
    message += `Service: ${data.service}\n\n`;
    message += `Message:\n${data.message}`;
    
    window.open(`https://wa.me/6581234567?text=${encodeURIComponent(message)}`, '_blank');
  });
</script>
