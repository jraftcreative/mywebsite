---

<section id="contact" class="min-h-[80vh] flex items-center py-16 px-6 bg-white relative overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-white via-primary-50/20 to-white -z-10"></div>
  
  <div class="max-w-7xl mx-auto w-full">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-20">
      
      <!-- Left - Content -->
      <div data-animate="animate-slide-in-left">
        <span class="inline-block text-primary-500 font-semibold text-sm uppercase tracking-wider mb-4">
          Get In Touch
        </span>
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-display font-bold text-dark-800 mb-6">
          Ready To Grow 
          <span class="gradient-text block">Your Business?</span>
        </h2>
        <p class="text-lg text-dark-500 mb-8 leading-relaxed">
          Let's chat about your goals and how we can help you achieve them. 
          Book a free 30-minute strategy call ‚Äî no strings attached.
        </p>

        <!-- Contact Methods -->
        <div class="space-y-4 mb-8">
          {contactMethods.map(method => (
            <a 
              href={method.href}
              target={method.href.startsWith('http') ? '_blank' : undefined}
              class="flex items-center gap-4 p-4 bg-white rounded-xl border border-dark-100 hover:border-primary-300 hover:shadow-md transition-all duration-300 group"
            >
              <div class="w-12 h-12 bg-primary-50 text-primary-500 rounded-xl flex items-center justify-center group-hover:bg-primary-500 group-hover:text-white transition-all duration-300">
                <Fragment set:html={method.icon} />
              </div>
              <div>
                <div class="text-sm text-dark-400">{method.label}</div>
                <div class="font-semibold text-dark-800 group-hover:text-primary-600 transition-colors">{method.value}</div>
              </div>
            </a>
          ))}
        </div>

        <!-- Social links -->
        <div class="flex gap-4">
          <a href="https://www.linkedin.com/company/jraftcreative" target="_blank" class="w-10 h-10 bg-dark-100 text-dark-500 rounded-lg flex items-center justify-center hover:bg-primary-500 hover:text-white transition-all duration-300">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
          <a href="https://www.instagram.com/jraftcreative" target="_blank" class="w-10 h-10 bg-dark-100 text-dark-500 rounded-lg flex items-center justify-center hover:bg-primary-500 hover:text-white transition-all duration-300">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
          <a href="https://www.facebook.com/jraftcreative" target="_blank" class="w-10 h-10 bg-dark-100 text-dark-500 rounded-lg flex items-center justify-center hover:bg-primary-500 hover:text-white transition-all duration-300">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Right - Form -->
      <div data-animate="animate-slide-in-right">
        <form id="contact-form" class="bg-white rounded-2xl p-6 lg:p-8 shadow-xl border border-dark-100">
          <h3 class="text-xl font-display font-bold text-dark-800 mb-6">
            Book Your Free Strategy Call
          </h3>

          <div class="space-y-4">
            <div>
              <label for="name" class="block text-sm font-medium text-dark-700 mb-1">Full Name</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-3 rounded-xl border border-dark-200 focus:border-primary-400 focus:ring-2 focus:ring-primary-100 outline-none transition-all"
                placeholder="John Doe"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-dark-700 mb-1">Email</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 rounded-xl border border-dark-200 focus:border-primary-400 focus:ring-2 focus:ring-primary-100 outline-none transition-all"
                placeholder="john@company.com"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-medium text-dark-700 mb-1">Phone (Optional)</label>
              <input 
                type="tel" 
                id="phone" 
                name="phone"
                class="w-full px-4 py-3 rounded-xl border border-dark-200 focus:border-primary-400 focus:ring-2 focus:ring-primary-100 outline-none transition-all"
                placeholder="+65 9123 4567"
              />
            </div>

            <div>
              <label for="service" class="block text-sm font-medium text-dark-700 mb-1">What do you need help with?</label>
              <select 
                id="service" 
                name="service" 
                required
                class="w-full px-4 py-3 rounded-xl border border-dark-200 focus:border-primary-400 focus:ring-2 focus:ring-primary-100 outline-none transition-all bg-white"
              >
                <option value="">Select a service</option>
                <option value="branding">Branding & Strategy</option>
                <option value="digital">Digital Marketing</option>
                <option value="social">Social Media Marketing</option>
                <option value="sales">Sales Training</option>
                <option value="other">Not sure / Multiple services</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-dark-700 mb-1">Tell us about your project</label>
              <textarea 
                id="message" 
                name="message" 
                rows="4"
                required
                class="w-full px-4 py-3 rounded-xl border border-dark-200 focus:border-primary-400 focus:ring-2 focus:ring-primary-100 outline-none transition-all resize-none"
                placeholder="What are your goals? What challenges are you facing?"
              ></textarea>
            </div>

            <button 
              type="submit"
              class="w-full btn-primary justify-center text-base py-4"
            >
              Send Message
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
              </svg>
            </button>
          </div>

          <p class="text-xs text-dark-400 mt-4 text-center">
            We'll get back to you within 24 hours. No spam, ever.
          </p>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form');
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form as HTMLFormElement);
    const data = Object.fromEntries(formData.entries());
    
    // Build WhatsApp message
    let message = `Hi Jraft Creative! üëã\n\n`;
    message += `I'm interested in your services.\n\n`;
    message += `üìù Name: ${data.name}\n`;
    message += `üìß Email: ${data.email}\n`;
    if (data.phone) message += `üì± Phone: ${data.phone}\n`;
    message += `üéØ Service: ${data.service}\n`;
    message += `\nüí¨ Message:\n${data.message}`;
    
    // Open WhatsApp
    const waUrl = `https://wa.me/6581234567?text=${encodeURIComponent(message)}`;
    window.open(waUrl, '_blank');
  });
</script>
